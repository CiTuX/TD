<resources>

    <style name="Theme.TD" parent="@style/Holo.Theme.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_td</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.TD</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.TD</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.TD</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.TD</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.TD</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_td</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_td</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.TD</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.TD.Widget</item>

        <!-- Holo Colors -->
        <item name="android:editTextBackground">@drawable/td_edit_text_holo_light</item>
        <item name="android:textColorHighlight">#996441a5</item>
        <item name="android:textSelectHandleLeft">@drawable/td_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/td_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/td_text_select_handle_middle</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/td_btn_check_holo_light</item>
        <item name="android:buttonStyle">@style/ButtonTD</item>
        <item name="android:imageButtonStyle">@style/ImageButtonTD</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarTD</item>
        <item name="android:seekBarStyle">@style/SeekBarTD</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/td_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/td_activated_background_holo_light
        </item>

    </style>

    <style name="ActionBar.Solid.TD" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_td</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_td</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_td</item>
        <item name="android:progressBarStyle">@style/ProgressBar.TD</item>
        <item name="android:logo">@drawable/twitch_logo_white</item>
        <item name="android:icon">@drawable/ic_glitchicon_white</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="ActionBar.Transparent.TD" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_td</item>
        <item name="android:progressBarStyle">@style/ProgressBar.TD</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.TD.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.TD</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.TD</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

</resources>