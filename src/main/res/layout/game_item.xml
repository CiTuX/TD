<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgBox"
        android:layout_width="102dp"
        android:layout_height="147dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/game_box"/>

    <TextView
        android:id="@+id/lblName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBox"
        android:layout_alignStart="@id/imgBox"
        android:layout_alignLeft="@id/imgBox"
        android:layout_alignEnd="@id/imgBox"
        android:layout_alignRight="@id/imgBox"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/imgViewers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblName"
        android:layout_alignStart="@id/lblName"
        android:layout_alignLeft="@id/lblName"
        android:src="@drawable/ic_watching_now"/>

    <TextView
        android:id="@+id/lblViewers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblName"
        android:layout_toRightOf="@id/imgViewers"
        android:layout_toEndOf="@id/imgViewers"
        android:layout_alignEnd="@id/imgBox"
        android:layout_alignRight="@id/imgBox"
        android:layout_alignBottom="@id/imgViewers"
        android:gravity="end|bottom"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:singleLine="true"/>

</RelativeLayout>